{% extends "layout.njk" %}

{% block content %}
<div class="card">
    <section
        class="avatar"
        style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover"></section>
    <section class="details">
        <h3>Detalhes</h3>

        <div class="item">
            <div>Nome Completo</div>
            <div>{{ teacher.name }}</div>
        </div>

        <div class="item">
            <div>Idade</div>
            <div>{{ teacher.age }} anos</div>
        </div>

        <div class="item">
            <div>Grau de Escolaridade</div>
            <div>{{ teacher.scholarity }}</div>
        
        </div>

        <div class="item">
            <div>Tipo de Aula</div>
            <div>{{ "Presencial" if teacher.type == "P" else "À distância"}}</div>
        </div>

        <div class="item">
            <div>Área de Atuação</div>
            <div>
                {% for area in teacher.areas %}
                <span>{{area}}</span>
                {% endfor %}
            </div>
        </div>

        <div class="item">
            <div>Desde</div>
            <div>{{ teacher.created_at }}</div>
        </div>

        <div class="buttons">
            <a href="/teachers/{{ teacher.id }}/edit" class="button">Editar</a>

            <form id="delete_button" action="/teachers?_method=DELETE" method="POST">
                <input type="hidden" name="id" value="{{ teacher.id }}">
                <button type="submit">Deletar</button>
            </form>
        </div>

        {% include 'confirm.njk' %}
    </section>
</form>
{% endblock content %}